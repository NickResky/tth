{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "baseUrl": "./",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "paths": {
            "webapps-reschke-common": ["node_modules/webapps-reschke-common/dist/bundles/webapps-reschke-common.umd.js"],
            "@angular/*": [ "../node_modules/@angular/*"]
        }
    },
    "angularCompilerOptions": {
        "entryModule": "./src/app/app-server.module#AppServerModule"
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*.ts"
    ]
}